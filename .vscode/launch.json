    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch node-red",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "prepare",
            "program": "${workspaceFolder}/packages/runtime/dist/start.js",
            "cwd": "${workspaceFolder}/packages/runtime"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceFolder}"
        }
    ]
}
